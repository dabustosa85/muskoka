<div class="container my-4">
    <h2>Appointment Details</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{appointment.title}}</h5>
            <p class="card-text">{{appointment.description}}</p>
            <p>Date: {{appointment.date}}</p>
            <p>Time: {{appointment.time}}</p>
            <p>Location: {{appointment.location}}</p>
            <p>User: {{appointment.user.firstName}} {{appointment.user.lastName}}</p>
            <a href="/backend/appointments" class="btn btn-secondary">Back to Appointments</a>
        </div>
    </div>
</div>
